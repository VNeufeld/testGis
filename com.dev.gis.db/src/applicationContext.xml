<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	default-autowire="default" default-lazy-init="false"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- standard definitions -->
	<context:annotation-config />
	<context:component-scan base-package="com.dev.gis.db.impl" />

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreResourceNotFound" value="false" />
		<property name="locations">
			<list>
				<value>hsgw-database.properties</value>
			</list>
		</property>
	</bean>
	
	
    <bean id="dataSourceCMD" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${hsgw.driverClassName}" />
		<property name="url" value="${hsgw.url}" />
		<property name="username" value="${hsgw.username}" />
		<property name="password" value="${hsgw.password}" />
	</bean>
	
</beans>
